{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "startCommand": "cd packages/cli/bin && ./n8n",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm build:deploy"
  },
  "build": {
    "builder": "nixpacks"
  },
  "environments": {
    "NODE_ENV": "production",
    "N8N_HOST": "0.0.0.0",
    "N8N_PORT": "$PORT"
  }
}